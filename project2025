import random
import cmath # –ú–æ–¥—É–ª—å –¥–ª—è —Ä–∞–±–æ—Ç—ã —Å –∫–æ–º–ø–ª–µ–∫—Å–Ω—ã–º–∏ —á–∏—Å–ª–∞–º–∏ –∏ —Ñ—É–Ω–∫—Ü–∏—è–º–∏

def create_random_complex():
    """–°–æ–∑–¥–∞–µ—Ç —Å–ª—É—á–∞–π–Ω–æ–µ –∫–æ–º–ø–ª–µ–∫—Å–Ω–æ–µ —á–∏—Å–ª–æ (a + bi), –≥–¥–µ a –∏ b - —Ü–µ–ª—ã–µ —á–∏—Å–ª–∞."""
    # –°–ª—É—á–∞–π–Ω–∞—è –¥–µ–π—Å—Ç–≤–∏—Ç–µ–ª—å–Ω–∞—è —á–∞—Å—Ç—å (–æ—Ç -10 –¥–æ 10)
    real_part = random.randint(-10, 10)
    # –°–ª—É—á–∞–π–Ω–∞—è –º–Ω–∏–º–∞—è —á–∞—Å—Ç—å (–æ—Ç -10 –¥–æ 10)
    imaginary_part = random.randint(-10, 10)
    
    # –°–æ–∑–¥–∞–Ω–∏–µ –∫–æ–º–ø–ª–µ–∫—Å–Ω–æ–≥–æ —á–∏—Å–ª–∞
    z = complex(real_part, imaginary_part)
    return z

# --- –ì–µ–Ω–µ—Ä–∞—Ü–∏—è —Å–ª—É—á–∞–π–Ω—ã—Ö —á–∏—Å–µ–ª ---

z1 = create_random_complex()
z2 = create_random_complex()

# --- –í—ã—á–∏—Å–ª–µ–Ω–∏—è ---

# –°—É–º–º–∞
sum_z = z1 + z2
# –ü—Ä–æ–∏–∑–≤–µ–¥–µ–Ω–∏–µ
product_z = z1 * z2
# –ú–æ–¥—É–ª—å (—Ä–∞—Å—Å—Ç–æ—è–Ω–∏–µ –æ—Ç –Ω–∞—á–∞–ª–∞ –∫–æ–æ—Ä–¥–∏–Ω–∞—Ç –Ω–∞ –∫–æ–º–ø–ª–µ–∫—Å–Ω–æ–π –ø–ª–æ—Å–∫–æ—Å—Ç–∏)
# –ò—Å–ø–æ–ª—å–∑—É–µ–º abs() –¥–ª—è –º–æ–¥—É–ª—è —á–∏—Å–ª–∞ z1
modulus_z1 = abs(z1)
# –°–æ–ø—Ä—è–∂–µ–Ω–Ω–æ–µ —á–∏—Å–ª–æ
conjugate_z2 = z2.conjugate()

# --- –í—ã–≤–æ–¥ —Ä–µ–∑—É–ª—å—Ç–∞—Ç–æ–≤ ---
print("--- üî¨ –°–õ–£–ß–ê–ô–ù–´–ï –ö–û–ú–ü–õ–ï–ö–°–ù–´–ï –ß–ò–°–õ–ê –ò –û–ü–ï–†–ê–¶–ò–ò ---")
print(f"–ü–µ—Ä–≤–æ–µ —á–∏—Å–ª–æ (z1): {z1}")
print(f"–í—Ç–æ—Ä–æ–µ —á–∏—Å–ª–æ (z2): {z2}")
print("-" * 50)

print(f"–°—É–º–º–∞ (z1 + z2):          {sum_z}")
print(f"–ü—Ä–æ–∏–∑–≤–µ–¥–µ–Ω–∏–µ (z1 * z2):    {product_z}")
print("-" * 50)

print(f"–ú–æ–¥—É–ª—å |z1|:               {modulus_z1:.4f}")
print(f"–°–æ–ø—Ä—è–∂–µ–Ω–Ω–æ–µ –∫ z2 (z2*):   {conjugate_z2}")

# –ü—Ä–æ–≤–µ—Ä–∫–∞: –Ω–∞ –∫–æ–º–ø–ª–µ–∫—Å–Ω–æ–π –ø–ª–æ—Å–∫–æ—Å—Ç–∏ —á–∏—Å–ª–æ z = a + bi –Ω–∞—Ö–æ–¥–∏—Ç—Å—è –Ω–∞ —Ä–∞—Å—Å—Ç–æ—è–Ω–∏–∏ |z| –æ—Ç –Ω–∞—á–∞–ª–∞ –∫–æ–æ—Ä–¥–∏–Ω–∞—Ç.
# |z| = sqrt(a^2 + b^2)
# –í –Ω–∞—à–µ–º —Å–ª—É—á–∞–µ –¥–ª—è z1:
real_part_z1 = z1.real
imaginary_part_z1 = z1.imag
manual_modulus = (real_part_z1**2 + imaginary_part_z1**2)**0.5

print(f"–ü—Ä–æ–≤–µ—Ä–∫–∞ –º–æ–¥—É–ª—è (sqrt(a^2 + b^2)): {manual_modulus:.4f}")
